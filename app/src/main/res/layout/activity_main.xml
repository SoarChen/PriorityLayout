<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <com.soar.prioritylayout.PriorityLayout
        xmlns:PriorityLayout="http://schemas.android.com/apk/res-auto"
        android:id="@+id/priority_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff00"
        >
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="20dp"
            android:singleLine="true"
            android:background="#ff00ffff"
            PriorityLayout:layout_priority="1"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5555"
            android:singleLine="true"
            android:textSize="20dp"
            android:background="#ff0000ff"
            android:visibility="visible"
            PriorityLayout:layout_priority="4"
            />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33333"
            android:singleLine="true"
            android:textSize="20dp"
            android:background="#fff000ff"
            android:visibility="visible"
            PriorityLayout:layout_priority="3"
            />

    </com.soar.prioritylayout.PriorityLayout>

</RelativeLayout>
